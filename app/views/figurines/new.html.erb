<%= form_tag'/figurines', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag(:name, nil, {class: "form-control", placeholder: "Enter the name of your figurine here!"})%>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: "form-control", placeholder: "How much do you want to charge?" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: "form-control", placeholder: "Enter a brief description of you figurine." %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: "form-control" , placeholder: "Copy your image url here" %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>