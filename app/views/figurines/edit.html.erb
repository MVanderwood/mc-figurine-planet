<%= form_tag"/figurine/#{figurine.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @figurine.name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @figurine.price, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @figurine.description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @figurine.image, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>